<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardBackgroundColor="@color/blue_grey_500">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">


                <TextView
                    android:id="@+id/hourTextView"
                    android:text="08"
                    android:textSize="@dimen/day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_grey_200"/>

                <TextView
                    android:id="@+id/colonTextView"
                    android:text=":"
                    android:textSize="@dimen/day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/hourTextView"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_grey_200"/>

                <TextView
                    android:id="@+id/minuteTextView"
                    android:text="30"
                    android:textSize="@dimen/day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/colonTextView"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_grey_200"/>

                <TextView
                    android:id="@+id/AMPMTextView"
                    android:text="AM"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/minuteTextView"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_grey_200"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>



        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
